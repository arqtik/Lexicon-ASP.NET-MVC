@model Person

@{
    if(Model != null){
        <div class="row" onclick="location.href='@Url.Action("Edit", "People", new {personId = Model.ID})'">
            <div class="col-1 col-border col-padding">@Model.ID</div>
            <div class="col-2 col-border col-padding">@Model.FirstName</div>
            <div class="col-2 col-border col-padding">@Model.LastName</div>
            <div class="col-1 col-border col-padding">@Model.Gender</div>
            <div class="col-2 col-border col-padding">@Model.City</div>
            <div class="col col-border col-padding">@Model.Email</div>
            <div class="col-1 col-border col-padding"><a href="@Url.Action("PersonLanguage", "Language", new { personId = Model.ID })">Show/Edit</a></div>
        </div>
    }
}