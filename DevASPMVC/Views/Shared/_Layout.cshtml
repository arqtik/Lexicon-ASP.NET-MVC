<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

<header>
    <a class="logo" asp-controller="Home" asp-action="Index"><h1>Martynas MVC</h1></a>
    <nav>
        <ul class="nav-list">
            <li>
                <a asp-controller="Home" asp-action="About">About</a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="Projects">Projects</a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="Contact">Contact</a>
            </li>

            @if (User.IsInRole("Admin") || User.IsInRole("User"))
            {
                <li>
                    <a asp-controller="People" asp-action="Index">People</a>
                </li>
            }

            @if (User.IsInRole("Admin"))
            {
                <li>
                    <a asp-controller="Ajax" asp-action="Index">Ajax</a>
                </li>
            }

            <partial name="_LoginPartial" />

        </ul>

    </nav>

    
</header>


<div class="flex-container">
    @RenderBody()
</div>


<footer>
    <p>@DateTime.Now.ToShortDateString() Martynas Vosylius</p>
</footer>


<script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"></script>
<script src="js/site.js"></script>

@RenderSection("Scripts", false)


</body>
</html>
