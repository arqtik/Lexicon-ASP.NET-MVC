<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

<header class="w-100">
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <a class="navbar-brand ms-2" asp-controller="Home" asp-action="Index">Martynas MVC</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-between" id="navbarNavAltMarkup">
            <div class="navbar-nav w-100">
                <a class="nav-item nav-link" asp-controller="Home" asp-action="About">About</a>
                <a class="nav-item nav-link" asp-controller="Home" asp-action="Projects">Projects</a>
                <a class="nav-item nav-link" asp-controller="Home" asp-action="Contact">Contact</a>

                @if (User.IsInRole("Admin") || User.IsInRole("User"))
                {
                    <a class="nav-item nav-link" asp-controller="People" asp-action="Index">People</a>
                }

                @if (User.IsInRole("Admin"))
                {
                    <a class="nav-item nav-link" asp-controller="Ajax" asp-action="Index">Ajax</a>
                }
            </div>
            <div>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    
</header>


<div class="flex-container">
    @RenderBody()
</div>


<footer>
    <p>@DateTime.Now.ToShortDateString() Martynas Vosylius</p>
</footer>


<script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"></script>
<script src="/js/site.js"></script>

@RenderSection("Scripts", false)


</body>
</html>
