@model PeopleViewModel

@{
    ViewBag.Title = "People Index";
    Layout = "_Layout";
}

<h2>People Index</h2>


@{
    if (Model.People.Any())
    {
        <table>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Address</th>
                <th>E-mail</th>
            </tr>
            @{
                foreach (var person in Model.People)
                {
                    <tr>
                        <td>@person.FirstName</td>
                        <td>@person.LastName</td>
                        <td>@person.Gender</td>
                        <td>@person.Address</td>
                        <td>@person.Email</td>
                    </tr>
                }
            }
        </table>
    }
}



